generator client {
  provider = "prisma-client"
  output = "../src/pkg/generated"
}

datasource db {
  provider = "postgresql"
}

model Resident {
  id String @id @default(uuid())
  f_name String?
  l_name String?
  n_name String?
  email String @unique
  sex Sex
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Sex {
  Man
  Woman
}